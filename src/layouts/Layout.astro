---
// src/layouts/Layout.astro
---

<!doctype html>
<html lang="zh-CN" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{Astro.props.title || '数字花园'}</title>

    <!-- 引入 Pico.css -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css"
    />

    <style>
      /* 一些微调，增加简洁感 */
      :root {
        --pico-font-size: 100%;
        --pico-line-height: 1.6;
        --pico-container-spacing-horizontal: 2rem;
      }
      body {
        padding: 2rem 0;
      }
      main {
        width: 100%;
        max-width: 80ch; /* 最佳阅读宽度 */
        margin: 0 auto;
      }
      nav {
        margin-bottom: 2rem;
      }
    </style>
  </head>
  <body>
    <main class="container">
      <nav>
        <ul>
          <li><a href="/"><strong>主页</strong></a></li>
        </ul>
        <ul>
          <li><a href="/posts">文章</a></li>
          <li><a href="/tweets">片段</a></li>
        </ul>
      </nav>

      <slot />
    </main>
  </body>
</html>
